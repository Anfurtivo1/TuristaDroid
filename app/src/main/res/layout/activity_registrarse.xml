<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarse">

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/login_link_registrarse"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrarse_et_correo" />

    <TextView
        android:id="@+id/resgistrarse_tv_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/login_lbl_Correo"
        app:layout_constraintBottom_toTopOf="@+id/registrarse_et_contrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/registrarse_tv_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/login_lbl_Contrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resgistrarse_tv_correo" />

    <EditText
        android:id="@+id/registrarse_et_contrasena"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:autofillHints=""
        android:background="#B3B3B3"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registrarse_et_correo"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginTop="59dp"
        android:autofillHints=""
        android:background="#B3B3B3"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrarse_et_contrasena" />

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="163dp"
        android:layout_height="114dp"
        android:layout_marginBottom="111dp"
        app:layout_constraintBottom_toTopOf="@+id/resgistrarse_tv_correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imagenusuarioregistro" />

    <ImageView
        android:id="@+id/imgGaleriaRegistrarse"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_marginBottom="79dp"
        app:layout_constraintBottom_toTopOf="@+id/registrarse_et_contrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imagengaleriaregistro" />

    <ImageView
        android:id="@+id/imgCamaraRegistrarse"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/registrarse_et_contrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imagencamararegistro" />

</androidx.constraintlayout.widget.ConstraintLayout>